rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users full access to their own user document and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // All subcollections under user document
      match /{document=**} {
        allow read, write, create, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Legacy patterns - allow any authenticated user (temporary for migration)
    match /trades/{document=**} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    
    match /portfolio/{document=**} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    
    // Catch-all for any other collections an authenticated user might need
    match /{collectionId}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
